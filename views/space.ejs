<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/space.css">
    <link rel="stylesheet" href="/css/nav.css">
    <script src="/js/nav.js" defer>
        function logOut() {
            const logOut = document.getElementById("logout");
            logOut.onclick
        }
    </script>
</head>
<body>
    <div id="nav">
        <!-- TODO: Create app.gets for each of these views -->
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/api/home">Home</a>
        <a href="/api/courses">Courses</a>
        <a href="/api/library">Library</a>
        <a href="/api/messages">Messages</a>
        <a href="/api/profile">Profile</a>
        <!-- Log Out needs to call method to end user sessions -->
        <a id="logout" href="/logout">Log Out</a>
    </div>
    <span style="font-size:50px;cursor:pointer;color:white;" onclick="openNav()">&#9776;</span>
    <div class="main">
        <h1 style="color: black;">
            <%= location %>
             Space:
        </h1>
        <form action="/api/postMessage" method="POST">
            <div class="writePost">
                <textarea name="content"></textarea>
                <input type="hidden" name="location" value="<%= location %>">
            </div>
            <button type="submit">Post</button>
        </form>
        <div class="posts">
            <% for (let i = 0; i < posts.length; i++) { %>
                <div class="post">
                    <% if (posts[i].user.img) { %>
                        <img src="<%= posts[i].user.img %>" alt="user photo">
                    <% } else { %>
                        <img src="\media/images/default.jpeg" alt="user photo">
                    <% } %>
                    <p id="user">
                        <%= posts[i].user.firstName %>
                         
                        <%= posts[i].user.lastName %>
                         [<%=posts[i].user.major%>]
                    </p>
                    <p id="dateTime">
                        <%= posts[i].date %>
                         
                        <%= posts[i].time %>
                    </p>
                    <p id="content">
                        <%= posts[i].content %>
                    </p>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>